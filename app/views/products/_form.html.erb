<h1>
    <%= action %> Product </h1>

<div class="container-fluid">

    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <%= form_for product do |f| %>
                <div class="form-group">
                    <%= f.label :name, for:"name_text" %>
                        <br>
                        <%= f.text_field :name, class:"form-control", id:"name_text" %>
                </div>
                <div class="form-group">
                    <%= f.label :description, for:"description_text" %>
                        <br>
                        <%= f.text_area :description, class:"form-control", id:"description_text" %>
                </div>
                <div class="form-group">
                    <%= f.label :price, for:"price_tag" %>
                        <br>
                        <%= f.number_field :price, class:"form-control", id:"price_tag" %>
                </div>

                <div class="form-group">
                    <%= f.submit 'Guardar', class:"btn btn-success"%>
                </div>
                <% end %>
        </div>
    </div>

</div>