<div class="container-fluid">

<h1>Productos</h1>

  <div class="row justify-content-md-right">
    <div class="col-md-12">
        <%= link_to '<strong>Nuevo </strong><i class="fas fa-plus"></i>'.html_safe, new_product_path, class:'btn btn-success' %>
    </div>
  </div>

<br>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>

              <%= link_to 'Ver <i class="fas fa-book-open"></i>'.html_safe, product, class:'btn btn-primary btn-md' %>
              <%= link_to 'Editar <i class="fas fa-edit"></i>'.html_safe, edit_product_path(product), class:'btn btn-primary btn-md' %>
              <%= link_to 'Borrar <i class="far fa-trash-alt"></i>'.html_safe, product, class:'btn btn-danger btn-md' , method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>

          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <br>

